@model List<Company>


<partial name="_notification" />
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create new Company
            </a>
        </div>
    </div>

    <table id="example" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>StreetAddress</th>
                <th>City</th>
                <th>State</th>
                <th>PostalCode</th>
                <th>PhoneNumber</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.StreetAddress</td>
                    <td>@obj.City</td>
                    <td>@obj.State</td>
                    <td>@obj.PostalCode</td>
                    <td>@obj.PhoneNumber</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square mx-1"></i>Edit
                            </a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill mx-1"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#example').DataTable(); // Initialize DataTables on your table with id 'example'
    });
</script>
